{
  "distSpecVersion": "1.1.1",
  "storage": {
    "rootDirectory": "/var/lib/zot",
    "dedupe": true,
    "commit": true,
    "gc": true
  },
  "http": {
    "address": "0.0.0.0",
    "port": "5000",
    "compat": ["docker2s2"],
    "realm": "zot",
    "auth": {
      "htpasswd": {
        "path": "/etc/zot/htpasswd"
      }
    },
    "accessControl": {
      "adminPolicy": {
        "users": ["admin"],
        "actions": ["read", "create", "update", "delete"]
      },
      "repositories": {
        "kws/**": {
          "policies": [
            {
              "users": ["abc"],
              "actions": ["read", "create", "update", "delete"]
            }
          ],
          "defaultPolicy": [],
          "anonymousPolicy": ["read"]
        },
        "**": {
          "policies": [
            {
              "users": ["*"],
              "actions": ["read", "create", "update", "delete"]
            }
          ],
          "defaultPolicy": [],
          "anonymousPolicy": ["read"]
        }
      }
    }
  },
  "extensions": {
    "ui": {
      "enable": true
    },
    "search": {
      "enable": true
    },
    "lint": {
        "enable": false
    }
  }
}